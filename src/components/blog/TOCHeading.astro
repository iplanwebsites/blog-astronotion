---
import type { TocItem } from "@/utils";

interface Props {
	heading: TocItem;
}

const {
	heading: { slug, text, depth, subheadings },
} = Astro.props;
// depth <= 1 ? "mt-3" : "mt-2 text-[0.6875rem]"
---

{
	(
		//NOTE: change this to depth 1 everywhere because that is how it works with notion at the moment}
		<li class={`${depth > 1 ? "ms-2" : ""}`}>
			<a
				class={`line-clamp-2 no-underline hover:text-accent-2 hover:underline hover:underline-offset-4 ${
					depth <= 1 ? "mt-2" : "mt-1"
				} ${slug==="autogenerated-interlinked-content"?"hidden":"block"}`}
				href={`#${slug}`}
        id ={`-tocid--${slug}`}
				aria-label={`Scroll to section: ${text}`}
			>
				{text}
			</a>
			{!!subheadings.length && (
				<ul>
					{subheadings.map((subheading) => (
						<Astro.self heading={subheading} />
					))}
				</ul>
			)}
		</li>
	)
}
